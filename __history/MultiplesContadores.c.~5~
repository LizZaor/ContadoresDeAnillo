#include <18F4620.h>
#fuses HS, NOFCMEN, NOIESO, PUT, NOBROWNOUT, NOWDT
#fuses NOPBADEN, STVREN, NOLVP, NODEBUG, MCLR
#USE DELAY (clock=16000000)

void main(void) {
    set_tris_d(0xfc);
    output_a(0xfc);
    output_b(0xfc);
    output_c(0xfc);
    output_d(0xfc);
    int16 conteo;
   
    while (TRUE) {
    
    //contador 1 (200ms)
        for(conteo=32;conteo>=1;conteo/=2)
        {
            output_a(conteo);
            delay_ms(500);
        }     
    //contador 2 (400ms)
      for(conteo=32;conteo>=1;conteo/=2)
        {
            output_b(conteo);
            delay_ms(500);
        }
      //contador 3  (700ms)
       for(conteo=32;conteo>=1;conteo/=2)
        {
            output_d(conteo);
            delay_ms(500);
        }
       //contador 4(1000ms)
        for(conteo=32;conteo>=1;conteo/=2)
        {
            output_c(conteo);
            delay_ms(500);
        }
    }
}
